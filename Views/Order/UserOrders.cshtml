@model IEnumerable<Order>;
<div class="row row-cols-1 row-cols-md-2 g-4">
      @if(Model.Count() > 0){
            @foreach (var p in Model) {
                  <div class="col">
                        <div class="container">
                              <div class="card text-center">
                                    <div class="card-header">
                                          @p.OrderID
                                    </div>
                                    <div class="card-body">
                                          <h5 class="card-title">@p.Name</h5>
                                          <p class="card-text">@p.Lines.FirstOrDefault().Product.Name ...</p>
                                          <p>@p.Lines.Sum(e => e.Price * e.Quantity)</p>
                                          <a class="btn btn-dark" asp-controller="Order" asp-action="Order" asp-route-orderId="@p.OrderID">Check Order</a>                                    </div>
                                    <div class="card-footer text-body-secondary">
                                          @p.Date
                                    </div>
                              </div>
                        </div>
                  </div>
                  

            }
      }else{
            <h2>no order</h2>
      }
</div>

