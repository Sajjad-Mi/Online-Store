@model Order;
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var p in Model.Lines) {
        <div class="col">
            <div class="container">
                <div class="card text-center">
                    <div class="card-header">
                        @p.Product.Name
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">price: @p.Price</h5>
                        <p class="card-text">Quantity: @p.Quantity</p>
                                           
                    </div>
                </div>
            </div>
        </div>
                    
    }
        
    </div>
    <div class="card text-center mt-3">
       <div class="card-header">
            <h3>Total: @Model.Lines.Sum(e => e.Price * e.Quantity)</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Address:</h5>
            <p class="card-text">@Model.Country, @Model.City, @Model.Line1</p>
            @if( Model.Shipped ){
                <p><i class="bi bi-truck"></i> Your order has been shipped</p>
            }                    
        </div>
    </div>

</div>
